{
  "name": "tamatebako",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend packages for projects at SmartHR",
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "build": "lerna run prebuild --stream && yarn tsc",
    "prebuild": "lerna run clean --stream",
    "lint": "eslint '**/*.{ts,tsx}'",
    "release": "lerna publish --conventional-commits",
    "prerelease": "yarn build && yarn lint && yarn test",
    "initial:release": "lerna publish from-package",
    "preinitial:release": "yarn prerelease",
    "start": "yarn build --watch",
    "tsc": "tsc --build packages --force",
    "pretest": "yarn build",
    "test": "jest"
  },
  "author": "SmartHR",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "eslint": "^8.33.0",
    "eslint-config-smarthr": "^6.7.0",
    "jest": "^29.3.1",
    "lerna": "^6.4.1",
    "prettier": "^2.8.3",
    "prettier-config-smarthr": "^1.0.0",
    "rimraf": "^4.0.7",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {}
}
